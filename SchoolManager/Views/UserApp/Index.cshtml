
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="user-app">

    <h1> Quản lý người dùng</h1>
    <br />
    <div class="row">
        <div class="col-md-4">
            <input type="text" name="searchname" value="" placeholder="Nhập tên người dùng" class="form-control" />
        </div>
    </div>
    <hr />

    <div class="get-data">

    </div>
    <hr />
    <div class="add-or-edit">
        <input type="number" name="id" value="0" class="form-control hidden" readonly hidden />
        <div class="row m-0 ">
            <div class="col-md-4 p-0">
                <label> Họ và tên </label>
                <input type="text" name="name" value="" class="form-control" />
                <div class="error">

                </div>
            </div>
            <div class="col-md-4 p-0">
                <label> Account </label>
                <input type="text" name="account" value="" class="form-control" />
                <div class="error">

                </div>
            </div>
            <div class="col-md-4 p-0">
                <label> Password </label>
                <input type="text" name="password" value="" class="form-control" />
                <div class="error">

                </div>
            </div>
        </div>
        <br />
        <button class="btn-createEdit btn btn-primary" data-url="/StudentManager/AddOrEdit"> Thêm mới</button>
    </div>

    
</div>
@section scripts{
    <script>
        GetListStudent();
        $('.btn-createEdit').click(function () {
            AddOrEdit(); 
        });  
    </script>
}




