@model IEnumerable<SchoolManager.ViewModels.ClassJoin>

    <div class="list-data">
        @if (Model.Count() > 0)
        {
            <div class="row data-item">
                <div class="col-md-1 d-flex justify-content-start">
                    <p class="data-title"> Mã lớp </p>
                </div>
                <div class="col-md-3 d-flex justify-content-start">
                    <p class="data-title"> Tên lớp </p>
                </div>
                <div class="col-md-3 d-flex justify-content-start">
                    <p class="data-title"> Môn học </p>
                </div>
                <div class="col-md-2 d-flex justify-content-start">
                    <p class="data-title"> Giảng viên </p>
                </div>
                <div class="col-md-2 d-flex justify-content-start">
                    <p class="data-title"> Ghi chú </p>
                </div>
                <div class="col-md-1 d-flex justify-content-end">
                </div>
            </div>
            foreach (var item in Model)
            {
                <div class="row data-item">
                    <div class="col-md-1 d-flex justify-content-start">
                        <p> @item.Code </p>
                    </div>
                    <div class="col-md-3 d-flex justify-content-start">
                        <p> @item.Name </p>
                    </div>
                    <div class="col-md-3 d-flex justify-content-start">
                        <p> @item.SubjectName </p>
                    </div>
                    <div class="col-md-2 d-flex justify-content-start">
                        <p> @item.LecturerName </p>
                    </div>
                    <div class="col-md-2 d-flex justify-content-start">
                        <p> @item.Node </p>
                    </div>
                    <div class="col-md-1 d-flex justify-content-end">
                        <button class="btn btn-edit" data-id="@item.ID" data-name="@item.Name" data-code="@item.Code" data-subjectid="@item.SubjectID" data-lecturerid="@item.LecturerID" data-node="@item.Node"><i class="far fa-edit text-success"></i></button>
                        <button class="btn btn-detail" data-id="@item.ID" data-toggle="modal" data-target="#myModal">
                            <i class="fas fa-info-circle text-primary"></i>
                        </button>
                        <button class=" btn btn-delete" data-id="@item.ID"><i class="fas fa-trash-alt text-danger"></i></button>


                    </div>
                </div>
            }
            <div class="modal" id="myModal">
                <div class="modal-dialog">
                    <div class="modal-content">

                        <!-- Modal Header -->
                        <div class="modal-header">
                            <h4 class="modal-title">Thông Tin Chi Tiết</h4>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>

                        <!-- Modal body -->
                        <div class="modal-body">

                        </div>

                        <!-- Modal footer -->
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                        </div>

                    </div>
                </div>
            </div>
            <div class="pagination">
                @for (int i = 1; i <= ViewBag.pageCount; i++)
                {
                    if (i == ViewBag.pageNumber)
                    {
                        <button data-page="@i" class="active">@i</button>
                    }
                    else
                    {
                        <button data-page="@i">@i</button>
                    }
                }
            </div>
        }
        else
        {
            <div class="jumbotron">
                <h2> Chưa có lớp học nào được thêm</h2>
            </div>
        }
    </div>



