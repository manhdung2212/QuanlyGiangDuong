@model IEnumerable<SchoolManager.Models.Faculty>
    <div class="list-data">
        @if (Model.Count() == 0)
        {
            <div class="jumbotron">
                <h2> Chưa có khoa nào được thêm  </h2>
            </div>
        }
        else
        {
            <div class="row data-item">
                <div class="col-md-3 d-flex justify-content-start">
                    <p class="data-title"> Tên khoa </p>
                </div>
                <div class="col-md-4 d-flex justify-content-start">
                    <p class="data-title"> Ghi chú </p>
                </div>
                <div class="col-md-3 d-flex justify-content-start">
                    <p class="data-title"> Trạng thái </p>
                </div>
                <div class="col-md-2 d-flex justify-content-end">
                </div>
            </div>
            foreach (var item in Model)
            {
                <div class="row data-item">
                    <div class="col-md-3 d-flex justify-content-start">
                        <p> @item.Name </p>
                    </div>
                    <div class="col-md-4 d-flex justify-content-start">
                        <p> @item.Node</p>
                    </div>
                    <div class="col-md-3 d-flex justify-content-start">
                        @if (item.Status == 0)
                        {
                            <p> Đang hoạt động </p>
                        }
                        else
                        {
                            <p> Ngừng hoạt động</p>
                        }
                    </div>
                    <div class="col-md-2 d-flex justify-content-end">
                        <button class="btn btn-edit" data-id="@item.ID" data-name="@item.Name" data-Node="@item.Node" data-Status="@item.Status" data-Createdate="@item.CreateDate.Value.ToString("yyyy-MM-dd")" data-Update="@item.UpdateDate.Value.ToString("yyyy-MM-dd")" data-Createby="@item.CreateBy" data-Updateby="@item.UpdateBy"><i class="far fa-edit text-success"></i></button>
                        <button class="btn btn-delete" data-id="@item.ID"><i class="fas fa-trash-alt text-danger"></i></button>

                        <button type="button" class="btn btn-detail" data-id="@item.ID" data-toggle="modal" data-target="#myModal">
                            <i class="text-primary fas fa-info-circle"></i>
                        </button>
                    </div>
                </div>
            }
        }


        <!-- The Modal -->
        <div class="modal" id="myModal">
            <div class="modal-dialog">
                <div class="modal-content">

                    <!-- Modal Header -->
                    <div class="modal-header">
                        <h4 class="modal-title">Thông Tin Chi Tiết</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>

                    <!-- Modal body -->
                    <div class="modal-body">

                    </div>

                    <!-- Modal footer -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                    </div>

                </div>
            </div>
        </div>

        <br />
        <div class="pagination">
            @for (int i = 1; i <= ViewBag.pageCount; i++)
            {
                if (i == ViewBag.pageNumber)
                {
                    <button data-page="@i" class="active">@i</button>
                }
                else
                {
                    <button data-page="@i">@i</button>
                }
            }
        </div>
    </div>
