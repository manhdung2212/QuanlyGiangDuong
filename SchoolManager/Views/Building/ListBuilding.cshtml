@model IEnumerable<SchoolManager.Models.Building>
    <div class="list-data">
        @if (Model.Count() > 0)
        {
            <div class="row data-item">
                <div class="col-md-5 d-flex justify-content-start">
                    <p class="data-title"> Tên tòa nhà </p>
                </div>
                <div class="col-md-5 d-flex justify-content-start">
                    <p class="data-title"> Ghi chú </p>
                </div>
                <div class="col-md-2 d-flex justify-content-end">
                </div>
            </div>
            foreach (var item in Model)
            {
                <div class="row data-item">
                    <div class="col-md-3 d-flex justify-content-start">
                        <p> @item.Name </p>
                    </div>
                    <div class="col-md-3 d-flex justify-content-start">
                        <p> @item.Node </p>
                    </div>
                    <div class="col-md-3 d-flex justify-content-start">
                        @if (item.Status == 0)
                        {
                            <p>  Đang hoạt động</p>

                        }
                        else
                        {
                        <p> Ngừng hoạt động</p>
                            
                        }
                    </div>
                    <div class="col-md-2 d-flex justify-content-end">
                        <button class="btn btn-edit" data-id="@item.ID" data-name="@item.Name" data-node="@item.Node" data-status="@item.Status"><i class="far fa-edit text-success"></i></button>
                        <button class=" btn btn-delete" data-id="@item.ID"><i class="far fa-trash-alt text-danger"></i></button>
                        <button type="button" class="btn btn-detail" data-id="@item.ID" data-toggle="modal" data-target="#myModal">
                            <i class="text-primary fas fa-info-circle"></i>
                        </button>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="jumbotron">
                <h1> Không có tòa nhà nào được thêm</h1>
            </div>
        }

    </div>
<div class="modal fade" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Modal Heading</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">

            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>
<div class="pagination">
    @for (int i = 1; i <= ViewBag.pageCount; i++)
    {
        if (i == ViewBag.pageNumber)
        {
            <button  data-page="@i" class="active btn-link">@i</button>
        }
        else
        {
            <button data-page="@i" class="btn-link">@i</button>
        }
    }
</div>
